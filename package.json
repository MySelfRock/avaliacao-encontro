{
  "name": "avaliacao-do-encontro-de-noivos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc server/index.ts server/database.ts --outDir dist/server --module commonjs --moduleResolution node --esModuleInterop true --skipLibCheck true --resolveJsonModule true",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "server:watch": "tsx watch server/index.ts",
    "start": "concurrently \"npm run server:watch\" \"npm run dev\"",
    "start:prod": "NODE_ENV=production node dist/server/server/index.js",
    "init-db": "tsx -e \"import { initializeDatabase } from './server/database'; initializeDatabase();\""
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
